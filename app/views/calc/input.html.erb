<% if user_signed_in? %>
    <span>Здравствуйте, <%= current_user.email %></span> </br>
    <%= form_with url: "calc/output", method: :get do |form| %>
        <%= form.label :array, "Массив:" %>
        <%= form.text_field :array %>
        <%= form.submit "Submit" %>
      <% end %>
      <%= flash[:notice] %>
    <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
<% end %>